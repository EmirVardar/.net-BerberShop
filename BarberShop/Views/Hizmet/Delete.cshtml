@model BarberShop.Models.Hizmet

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<div class="container mt-5">
    <!-- Sayfa Başlığı -->
    <div class="text-center mb-3">
        <h1 class="fw-bold text-danger" style="font-size: 1.75rem;">Hizmeti Sil</h1>
        <p class="text-muted" style="font-size: 0.9rem;">
            "@Model.Name" adlı hizmeti silmek istediğinizden emin misiniz? <br /> Bu işlem geri alınamaz.
        </p>
    </div>

    <!-- Hizmet Bilgileri -->
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-danger text-white text-center rounded-top">
            <h4 class="mb-0" style="font-size: 1.25rem;">Hizmet Bilgileri</h4>
        </div>

        <div class="card-body text-center" style="font-size: 0.9rem;">
            <dl class="row mb-0">
                <dt class="col-sm-5 fw-bold text-primary">Hizmet Adı:</dt>
                <dd class="col-sm-7">@Model.Name</dd>
                <dt class="col-sm-5 fw-bold text-primary">Açıklama:</dt>
                <dd class="col-sm-7">@Model.Description</dd>
                <dt class="col-sm-5 fw-bold text-primary">Ücret:</dt>
                <dd class="col-sm-7">@Model.Price.ToString("C")</dd>
                <dt class="col-sm-5 fw-bold text-primary">Süre:</dt>
                <dd class="col-sm-7">@Model.Duration dakika</dd>
            </dl>
        </div>

        <!-- İşlem Butonları -->
        <div class="card-footer text-center bg-light rounded-bottom">
            <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger px-3 py-2 me-2" style="font-size: 0.85rem;">
                    <i class="bi bi-trash-fill me-1"></i> Evet, Sil
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary px-3 py-2" style="font-size: 0.85rem;">
                <i class="bi bi-arrow-left-circle me-1"></i> Hayır
            </a>
        </div>
    </div>
</div>
