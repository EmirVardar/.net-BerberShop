@model IEnumerable<BarberShop.Models.Hizmet>

<h1>Hizmetler</h1>



<table class="table">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Açıklama</th>
            <th>Ücret</th>
            <th>Süre (dakika)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hizmet in Model)
        {
            <tr>
                <td>@hizmet.Name</td>
                <td>@hizmet.Description</td>
                <td>@hizmet.Price.ToString("C")</td>
                <td>@hizmet.Duration</td>
                <td>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
