@model BarberShop.Models.Hizmet

<div class="container mt-5">
    <!-- Sayfa Başlığı -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Yeni Hizmet Ekle</h1>
        <p class="text-muted">Lütfen eklemek istediğiniz hizmet detaylarını aşağıya giriniz.</p>
    </div>

    <!-- Form -->
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row g-3">
                    <!-- Hizmet Adı -->
                    <div class="col-md-12">
                        <label asp-for="Name" class="form-label fw-bold">Hizmet Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Hizmet adını giriniz..." />
                    </div>

                    <!-- Açıklama -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet açıklamasını giriniz..."></textarea>
                    </div>

                    <!-- Ücret -->
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-bold">Ücret</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Ücreti giriniz..." />
                    </div>

                    <!-- Süre -->
                    <div class="col-md-6">
                        <label asp-for="Duration" class="form-label fw-bold">Süre (dakika)</label>
                        <input asp-for="Duration" type="number" class="form-control" placeholder="Süreyi dakika olarak giriniz..." />
                    </div>
                </div>

                <!-- Kaydet Butonu -->
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success px-4 py-2">
                        <i class="bi bi-check-circle me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
