@model BarberShop.ViewModels.CalisanViewModel

@{
    ViewData["Title"] = "Çalışan Düzenle";
}

<h1 class="mb-4">Çalışan Düzenle</h1>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group mb-3">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <h4>Uzmanlık Alanları</h4>
    @foreach (var hizmet in ViewBag.Hizmetler)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="@hizmet.Id" name="SecilenHizmetler"
            @(Model.SecilenHizmetler.Contains(hizmet.Id) ? "checked" : "") />
            <label class="form-check-label">@hizmet.Name</label>
        </div>
    }

    <h4>Çalışma Saatleri</h4>
    @for (var i = 0; i < Model.CalismaSaatleri.Count; i++)
    {
        <div class="mb-2">
            <label>@Model.CalismaSaatleri[i].Gun</label>
            <input type="time" asp-for="CalismaSaatleri[i].BaslangicSaati" class="form-control d-inline w-25" />
            <input type="time" asp-for="CalismaSaatleri[i].BitisSaati" class="form-control d-inline w-25" />
        </div>
    }

    <button type="submit" class="btn btn-warning text-white mt-3">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
</form>
