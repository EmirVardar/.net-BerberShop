@model BarberShop.ViewModels.CalisanViewModel

<h1>Çalışan Düzenle</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <h3>Uzmanlık Alanları</h3>
    @foreach (var hizmet in Model.TumHizmetler)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="@hizmet.Id"
                   name="SecilenHizmetler" @(Model.SecilenHizmetler.Contains(hizmet.Id) ? "checked" : "") />
            <label class="form-check-label">@hizmet.Name</label>
        </div>
    }

    <h3>Çalışma Saatleri</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Gün</th>
                <th>Başlangıç Saati</th>
                <th>Bitiş Saati</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.CalismaSaatleri.Count; i++)
            {
                <tr>
                    <td>@Model.CalismaSaatleri[i].Gun</td>
                    <td>
                        <input type="time" asp-for="CalismaSaatleri[@i].BaslangicSaati" class="form-control" />
                    </td>
                    <td>
                        <input type="time" asp-for="CalismaSaatleri[@i].BitisSaati" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
