@model IEnumerable<BarberShop.Models.Calisan>

<div class="container mt-5">
    <!-- Sayfa Başlığı -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Çalışanlarımız</h1>
        <p class="text-muted">BarberShop çalışanlarımızın iletişim bilgileri, uzmanlık alanları ve çalışma saatleri burada listelenmiştir.</p>
    </div>

    <!-- Çalışanlar Tablosu -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Çalışan Listesi</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Telefon</th>
                        <th>Uzmanlık Alanları</th>
                        <th>Çalışma Saatleri</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var calisan in Model)
                    {
                        <tr>
                            <td class="align-middle">@calisan.Ad @calisan.Soyad</td>
                            <td class="align-middle">@calisan.Telefon</td>
                            <td class="align-middle">
                                @if (calisan.CalisanHizmetleri.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var uzmanlik in calisan.CalisanHizmetleri)
                                        {
                                            <li><span class="badge bg-info text-white">@uzmanlik.Hizmet.Name</span></li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>Tanımlı değil</span>
                                }
                            </td>
                            <td class="align-middle">
                                @if (calisan.CalismaSaatleri.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var saat in calisan.CalismaSaatleri)
                                        {
                                            <li>
                                                <strong>@saat.Gun:</strong> @saat.BaslangicSaati - @saat.BitisSaati
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>Tanımlı değil</span>
                                }
                            </td>
                            <td class="text-center align-middle">
                                <a asp-action="Edit" asp-route-id="@calisan.Id" class="btn btn-sm btn-outline-primary me-1">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@calisan.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
