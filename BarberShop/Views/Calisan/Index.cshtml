@model IEnumerable<BarberShop.Models.Calisan>

@{
    ViewData["Title"] = "Çalışan Listesi";
}

<h1 class="mb-4 text-center">Çalışan Listesi</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>
    <span class="text-muted">Toplam Çalışan: @Model.Count()</span>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>Ad Soyad</th>
            <th>Telefon</th>
            <th>Uzmanlık Alanları</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-danger">Henüz çalışan eklenmemiş.</td>
            </tr>
        }
        else
        {
            @foreach (var calisan in Model)
            {
                <tr>
                    <td class="align-middle">@calisan.Ad @calisan.Soyad</td>
                    <td class="align-middle">@calisan.Telefon</td>
                    <td class="align-middle">
                        @if (calisan.CalisanHizmetleri != null && calisan.CalisanHizmetleri.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var uzmanlik in calisan.CalisanHizmetleri)
                                {
                                    <li>@uzmanlik.Hizmet.Name</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Tanımlı değil</span>
                        }
                    </td>
                    <td class="align-middle">
                        @if (calisan.CalismaSaatleri != null && calisan.CalismaSaatleri.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var saat in calisan.CalismaSaatleri)
                                {
                                    <li>
                                        <strong>@saat.Gun:</strong>
                                        @saat.BaslangicSaati.ToString(@"hh\:mm") -
                                        @saat.BitisSaati.ToString(@"hh\:mm")
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Tanımlı değil</span>
                        }
                    </td>
                    <td class="align-middle text-center">
                        <a asp-action="Edit" asp-route-id="@calisan.Id" class="btn btn-warning btn-sm text-white">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@calisan.Id" class="btn btn-danger btn-sm text-white">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
