@model List<BarberShop.ViewModels.RandevuListeViewModel>

<h2>Randevular</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Çalışan</th>
            <th>Hizmet</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.UserName</td>
                <td>@r.CalisanAdi</td>
                <td>@r.HizmetAdi</td>
                <td>@r.Tarih</td>
                <td>@r.Durum</td>
                <td>
                    @if (r.Durum == BarberShop.Models.RandevuDurumu.Pending)
                    {
                        <form asp-action="Onayla" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                        </form>
                        <form asp-action="Reddet" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                        </form>
                    }
                    else
                    {
                        <span>Onay/Reddetme yapılmış</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
