@model dynamic
@{
    ViewData["Title"] = "Randevu Al";
}

<h2>Randevu Al</h2>

<form asp-action="RandevuAl" method="post">
    <div class="form-group">
        <label>Çalışan Seçin</label>
        <select name="calisanId" class="form-control">
            @foreach (var calisan in ViewBag.Calisanlar)
            {
                <option value="@calisan.Id">@calisan.Ad @calisan.Soyad</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Tarih ve Saat</label>
        <input type="datetime-local" name="randevuTarihi" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Randevu Al</button>
</form>
